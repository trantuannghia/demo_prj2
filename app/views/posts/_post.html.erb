<li id="post-<%= post.id %>", class="posts">
  <%= link_to gravatar_for(post.user, size: 70),
    post.user %>
  <span class="user">
    <h3><%= link_to post.user.name, post.user %></h3>
    <span class="titles"><%= post.title %></span><br>
    <%= post.content %>
  </span>
   <span class="timestamp">
    <%= t ".posted" %>
    <%= time_ago_in_words post.created_at %>
    <%= t ".ago" %>
    <% if current_user.is_user? post.user %>
      <%= link_to t(".delete"), post, method: :delete,
        data: {confirm: t(".you_sure")} %>
    <% end %>
  </span>
  <span class="content">
    <%= image_tag post.picture.url if post.picture? %>
  </span>

   <ul class="comment_list">
    <%= render post.comments.check_child %>
  </ul>

  <%= content_tag :label, t(".comment") %>
  <%= render "comments/form", post: post if current_user.following? post.user %>
</li>
