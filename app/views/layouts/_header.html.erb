<header class = "navbar navbar-fixed-top navbar-inverse">
  <div class="row">
    <div class="col-md-4">
      <%= link_to t(".fake_book"), root_path, class: "logo" %>

      <% if user_signed_in? %>
        <%= form_tag posts_path, :method => 'get', class: "navbar-form navbar-right formsearch" do %>
            <%= text_field_tag :search, params[:search], class: "form-control", id: "search_field", autocomplete: "off" %>
             <%= content_tag :ul, "",class: "helpsearch" %>
        <% end %>
      <% end %>

    </div>
    <div class="col-md-3">
    </div>
    <div class="col-md-5">
      <nav>
        <ul class = "nav navbar-nav navbar-right">
          <li><%= link_to t(".home"), root_path %></li>
          <li><%= link_to t(".help"), help_path %></li>
          <% if user_signed_in? %>
            <li class="dropdown">
              <%= link_to raw(t(".setting")+"<b class='caret'></b>".html_safe), "#",
                {"data-toggle" => "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".my_profile"), "#" %></li>
                <li><%= link_to t(".my_post"), current_user %></li>
                <li><%= link_to t(".all_users"), users_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), destroy_user_session_path %>
                </li>
              </ul>
            </li>
            <li><%= link_to t(".logout"), destroy_user_session_path %></li>
          <% else %>
            <li><%= link_to t(".login"), new_user_session_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
    </div>
  </div>
</header>
