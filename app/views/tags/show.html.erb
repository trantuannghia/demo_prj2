<div class="row">
    <div class="col-md-3">
      <aside>
        <section class="user_info">
          <%=  render "shared/user_info" %>
        </section>
        <section class="stats">
          <%= render "shared/stats" %>
        </section>
      </aside>
    </div>
    <div class="col-md-6">
      <div class="row" >
        <aside class="post_form">
          <h3><%= t ".Write_new_post_here" %></h3>
          <%= render "shared/post_form" %>
        </aside >
      </div>
      <div class="row">
        <h3><%= t ".post_with_hashtag" %></h3>
        <ol class="Post Hashtag">
          <%= render @post %>
          <%= paginate @post, theme: "twitter-bootstrap-3" %>
        <ol>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
